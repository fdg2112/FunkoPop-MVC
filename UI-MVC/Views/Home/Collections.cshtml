@model UI_MVC.Models.UserHomeView

@{
    ViewBag.Title = "Collections";
}

<main>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var collection in Model.AllCollections)
        {
            <div class="col mb-4">
                <div class="card text-white bg-secondary square-card">
                    <img src="@collection.Url_image" class="card-img-top square-image" alt="@collection.Name">
                    <div class="card-header">@collection.Name</div>
                    <div class="card-body">
                        <h5 class="card-title">@collection.Description</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</main>

<style>
    body {
        background: linear-gradient(to top, #D3959B, #BFE6BA);
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .square-card {
        background-color: #f0f0f0;
        border: none;
        padding: 10px;
        width: 100%; /* Ancho deseado */
        height: 100%; /* Alto deseado */
        transition: transform 0.3s;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }

    .card-img-top.square-image {
        max-width: 100%; /* Asegura que la imagen no sea más ancha que la tarjeta */
        max-height: 70%; /* Ajusta la altura de la imagen */
        object-fit: contain; /* Escala la imagen para ajustarse al espacio sin cortarla */
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card h5 {
        font-size: 18px;
        margin-bottom: 5px;
    }

    .card p {
        margin-bottom: 3px;
    }
</style>